{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "types": [
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@assets": [
                "./src/assets/index"
            ],
            "@components": [
                "./src/components/index"
            ],
            "@pages": [
                "./src/pages/index"
            ],
            "@providers": [
                "./src/providers/index"
            ],
            "@utils": [
                "./src/utils/index"
            ],
            "@data": [
                "./src/data/index"
            ],
            "@mocks/providers": [
                "./src/providers/__mocks__"
            ]
        }
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
